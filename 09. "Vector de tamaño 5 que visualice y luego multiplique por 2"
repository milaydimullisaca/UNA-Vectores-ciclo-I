#include <iostream>
using namespace std;

int main() {
    int arreglo1[5];     // Arreglo original
    int arreglo2[5];     // Arreglo para almacenar los valores multiplicados por 2

    // Leer 5 n√∫meros en el primer arreglo
    cout << "Ingrese 5 numeros:" << endl;
    for (int i = 0; i < 5; i++) {
        cout << "Numero " << i + 1 << ": ";
        cin >> arreglo1[i];
        
        // Copiar y multiplicar por 2 al segundo arreglo
        arreglo2[i] = arreglo1[i] * 2;
    }
    // Mostrar ambos arreglos
    cout << "Arreglo original:" << endl;
    for (int i = 0; i < 5; i++) {
        cout << "Numero " << i + 1 << ": " << arreglo1[i] << endl;
    }
    cout << "Arreglo multiplicado por 2:" << endl;
    for (int i = 0; i < 5; i++) {
        cout << "Numero " << i + 1 << ": " << arreglo2[i] << endl;
    }
    return 0;
}
