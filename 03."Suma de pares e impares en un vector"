#include <iostream>
using namespace std;
int main() {
    int n,sp,si;
    sp=0;
    si=0;
    cin>>n;
    int vector[n];
    for(int i=0;i<n;i++){
       vector[i]=i+1;
    if(vector[i]%2==0){
        sp=sp+vector[i];
    }
        else{
            si=si+vector[i];
        }
}
    cout<<"la suma de pares es:"<<sp<<endl;
    cout<<"la suma de impares pares es:"<<si;
    return 0;
}
